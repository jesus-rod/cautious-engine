datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model FileMetadata {
  id             String   @id @default(uuid())
  filename       String
  filesize       Int
  uploadDate     DateTime @default(now())
  analysisResult String
}

model Topic {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
}
